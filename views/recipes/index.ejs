<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1> Recipes </h1>
			<p> View our selection of recipes </p>
			<p>
				<a class="btn btn-primary btn-lg" href="/recipes/new"> Add New Recipe </a>
			</p>
		</div>
	</header>
	
	<div class="row" style="display:flex; flex-wrap-: wrap; text-align: center;">
		<% recipes.forEach(function(recipe) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= recipe.image %>">	
					<div class="caption">
						<h4> <%= recipe.name %> </h4>
					</div>
					<p>
						<a href="/recipes/<%= recipe._id %>" class="btn btn-primary"> More Info </a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include("../partials/footer") %>