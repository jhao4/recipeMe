<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;"> Edit <%= recipe.name %> </h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" value="<%= recipe.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" value="<%= recipe.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" value="<%= recipe.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" value="<%= recipe.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block"> Submit </button>
				</div>
			</form>
			<a href="/recipes"> Back </a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>